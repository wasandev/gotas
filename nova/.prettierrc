{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "requirePragma": false,
    "proseWrap": "preserve",
    "arrowParens": "avoid",

    "overrides": [
        {
            "files": "resources/css/**/*.css",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
